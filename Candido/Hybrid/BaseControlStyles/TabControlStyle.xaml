    <Style TargetType="{x:Type TabControl}">
        <Setter Property="Background" Value="{StaticResource Hybrid.TabItem.Background.Selected}" />
        <Setter Property="BorderBrush" Value="{StaticResource Hybrid.TabItem.Border}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

